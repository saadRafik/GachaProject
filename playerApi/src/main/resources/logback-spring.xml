<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- More detailed logging for a specific package -->
    <logger name="com.player" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
</configuration>
